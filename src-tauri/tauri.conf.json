{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Codex Manager",
  "version": "1.0.0",
  "identifier": "com.zhengjr9.codex-manager",
  "build": {
    "beforeDevCommand": "npm run client",
    "devUrl": "http://localhost:5174",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [{
      "title": "Codex Manager",
      "width": 1100,
      "height": 720
    }],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
